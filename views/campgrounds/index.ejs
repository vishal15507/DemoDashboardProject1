<% layout("layouts/boilerplate") %> 
    <h1>All Campgrounds</h1>
    <div>
        <a href="http://localhost:3000/campgrounds/new">Add New Campground</a>
    </div>
    <!-- <ul> -->
        <% for(let campground of campgrounds){ %> 
                <div class="card mb-2" >
                    <div class="row">
                        <div class="col-md-4">
                            <img class="img-fluid" src= <%=campground.image  %> alt="">
                            <!-- <p> <%= campground.description %>  </p> -->
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title"> <%= campground.title %>  </h5>
                                <p class="card-text"> <%= campground.description  %>  </p>
                                <p class="card-text">
                                    <small class="text-muted"> <%=campground.location  %>  </small>        
                                </p>
                                <a class="btn btn-primary" href="/campgrounds/<%= campground.id %> ">View <%= campground.title %></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- <a href="http://localhost:3000/campgrounds/<%= campground._id %>" ><%= campground.title %></a> -->
                <!-- <a href="http://localhost:3000/campgrounds/<%= campground._id %>/edit" >Edit</a> -->
            
        <% } %> 
    <!-- </ul> -->
